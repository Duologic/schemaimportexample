{
  "$id": "https://example.com/schemas/address",
  "else": {
    "properties": {
      "postal_code": {
        "pattern": "[A-Z][0-9][A-Z][0-9][A-Z][0-9]"
      }
    }
  },
  "if": {
    "properties": {
      "country": {
        "const": "United States of America"
      }
    }
  },
  "properties": {
    "city": {
      "type": "string"
    },
    "country": {
      "default": "United States of America",
      "enum": [
        "United States of America",
        "Canada"
      ]
    },
    "state": {
      "type": "string"
    },
    "street_address": {
      "type": "string"
    }
  },
  "required": [
    "street_address",
    "city",
    "state"
  ],
  "then": {
    "properties": {
      "postal_code": {
        "pattern": "[0-9]{5}(-[0-9]{4})?"
      }
    }
  },
  "type": "object"
}

